@{
    ViewBag.Title = "Home Page";
}

<form class="form-horizontal" style="width:500px;">
    <div class="form-group" style="text-align:center;">
        <h4>Create a new account.</h4>
    </div>
    <div class="form-group">
        <label class="col-md-2 control-label">Firstname</label>
        <div class="col-md-10">
            <input type="text" class="form-control" />
        </div>
    </div>
    <div class="form-group">
        <label class="col-md-2 control-label">Lastname</label>
        <div class="col-md-10">
            <input type="text" class="form-control" />
        </div>
    </div>
    <div class="form-group">
        <label class="col-md-2 control-label">Age</label>
        <div class="col-md-10">
            <input type="text" class="form-control" />
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-success pull-right" value="Register" />
        </div>
    </div>

</form>
